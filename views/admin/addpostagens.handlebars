{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{/each}}
<div class="card">
  <div class="card-header">
    <h1 class="display-4" style="font-size:30px;">Adiconar nova postagem</h1>
  </div>
  <div class="card-body">
    <form action="/admin/postagens/add" method="POST">
      <div class="mt-2">
        <label for="titulo">Titulo</label>
        <input type="text" class="form-control" id="titulo" name="titulo" />
      </div>
      <div class="mt-2">
        <label for="slug">Slug</label>
        <input type="text" class="form-control" id="slug" name="slug" />
      </div>
      <div class="mt-2">
        <label for="descricao">Descrição</label>
        <input
          type="text"
          class="form-control"
          id="descricao"
          name="descricao"
        />
      </div>
      <div class="mt-2">
        <label for="categoria">Categoria</label>
        <select
          class="form-control custom-select"
          name="categoria"
          id="categoria"
        >
          {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
          {{else}}
            <option value="0">Nenhuma categoria</option>
          {{/each}}
        </select>
      </div>
      <div class="mt-2">
        <label for="conteudo" id="conteudo">Conteudo</label>
        <textarea rows="4" class="form-control" name="conteudo"></textarea>
      </div>
      <div class="mt-4">
        <button class="btn btn-success" type="submit">Criar postagem</button>
      </div>
    </form>
  </div>
</div>